extends layout.pug

block content
  header(class="row mt-3 justify-content-between" style="height: 100px;")
    div(class="col-4 d-flex align-items-center")
      div(class="col")
        h4(id="track_name" class="mb-0") 
        p(id="track_artist" class="mt-1 text-muted") Play something on Spotify to begin.

    div(class="col")

    div(class="col-auto d-flex align-items-center")
      a(href="/spotify/logout" class="btn btn-link") Log out

  div(class="row" style="height: 100px;")

  div(class="row justify-content-center")
      img(id="track_img" width="300")

  script(src="https://sdk.scdn.co/spotify-player.js")
  script(src="/playback.js")
  script.
    initSpotifyPlayer("#{access_token}")